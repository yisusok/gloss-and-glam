---
interface Props {
	title: string;
	href: string;
}

const { title, href } = Astro.props;
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=PT+Serif&family=Roboto+Mono&family=Work+Sans&display=swap" rel="stylesheet">



<div class="ccard">

	<li class="link-card">
		<img src={href} alt="">
		<center>
			<h2>
				{title}
				<!-- <span>&rarr;</span> -->
			</h2>
		</center>
	</li>
</div>

<style>

	.ccard{
		margin: .5rem;
	}
	

	h2{
		color: white;
		font-family: Cormorant Garamond;
		font-weight: 500;
		max-width: 8rem;
	}

	.link-card {
		padding: 1.2rem;
		margin: 1rem;
		list-style: none;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background-color:black;
		border: .5px solid rgba(206, 165, 97, 1);
		width: 12rem;
		height: 15rem;
		border-radius: 1rem;
	}
</style>
