---
interface Props {
	title: string;
	price: string;
}

const { title, price } = Astro.props;
---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Manrope:wght@200..800&family=PT+Serif&family=Roboto+Mono&family=Work+Sans&display=swap" rel="stylesheet">


<div class="ccard">

	<li class="link-card">
		<h2>{title}</h2>
			<h2>
				$<b>{price}</b>
			</h2>
	
        </li>

    <li class="checks"><img src="\checkmark.svg" alt="checkmark"><p>Hair Cut of Your Choice</p></li>
    <li class="checks"><img src="\checkmark.svg" alt="checkmark"><p>Beard Style / Shaving for Men</p></li>
    <li class="checks"><img src="\checkmark.svg" alt="checkmark"><p>Facial Treatment</p></li>
    <li class="checks"><img src="\checkmark.svg" alt="checkmark"><p>Hair Treatment / Keratin Treatment  Suited for You</p></li>

    <center>
        <a href="#">Choose plan</a>
    </center>

</div>

<style>

    a{
        color: rgba(236, 236, 236, 1);
        margin: 2rem;
        width: 6rem;
        display: flex;
        border-radius: 1rem;
        text-decoration: none;
        border: 1px solid rgba(206, 165, 97, 1);
        padding: 1rem;
        justify-content: center;
        font-size: .8rem;
    }

    a:hover{
        background-color:rgba(206, 165, 97, 1);
        color: black;
    }

    body{
        font-family: Manrope
    }
	
    b{
        font-weight: 600;
    }

	h2{
		color: rgba(236, 236, 236, 1);
		font-family: Manrope;
		font-weight: lighter;
        text-align: center;
	}

    .link-card{
        margin-top: 1rem;
    }

	.ccard {
        padding: 3.6rem;
        margin: 1rem;
        list-style: none;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: rgba(43, 43, 43, 1);
        border: .5px solid rgba(206, 165, 97, 1);
        width: 15rem;
        height: 20rem;
        border-radius: 1rem;
        font-family: Manrope;
        font-weight: lighter;
    }

    .checks{
        display: flex;
        color: rgba(255, 255, 255, 0.7);
        margin-left: 1rem;
        font-family: Cormorant Garamond;
        font-weight: lighter;
    }

    p{
        font-size: 0.8rem;
        font-family: Manrope;
        font-weight: lighter;
    }

    img{
        margin-right: .3rem;
        width: 1.2rem;
    }
</style>